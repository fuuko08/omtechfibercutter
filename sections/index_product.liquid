{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div class="page-width">
  {%- if section.settings.title != blank -%}
    <div class="section-header text-{{ section.settings.heading_position }}">
      <h2 class="section-header__title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
  <div class="swiper-container">
    <div class="new-products-sec swiper index_proSwiper">
      <div class="new-products swiper-wrapper gallery">
        {%- for block in section.blocks -%}
            <div class="gpro__item swiper-slide content">
                <a href="{{ block.settings.link }}" class="pro__link default_item " aria-label="{{ block.settings.image.alt }}">
                   <h2 class="pro_name">{{ block.settings.name }}</h2>
                  <img class="none" src="{{ block.settings.image | img_url:"master" }}" />
                </a>

<!--               hover -->
              <a href="{{ block.settings.link }}" class="pro__link hover_item hoverit" aria-label="{{ block.settings.image.alt }}">
                   <div class="h_name">{{ block.settings.h_name }}</div>
                  <img class="blur" src="{{ block.settings.image2 | img_url:"master" }}" />
                  
                <div class="h_content"> {{ block.settings.h_content }}   
                    <div class="h_view">
                     <div class="text-custom">
                         <p class="text-title">View Product</p>                   
                         <p class="spec"><span class="icon0"></span> Full Spec <span class="icon1"></span> 360Â° View</p>  
                      </div>
                      <div class="text-btn">
                        <button class="btn-custom"><i class="icon_right tiny-icon"></i></button>
                      </div>
                 </div> 
                </div>              
                </a>
            </div>
        {%- endfor -%}
      </div>
      <div class="swiper-pagination"></div>               
      <div class="swiper-button-prev"></div>              
      <div class="swiper-button-next"></div>   
    </div>
  {%- endif -%}
</div>
  
</div>

  <style>    
    .swiper-container .swiper-button-prev{
        left: -40px;
    }
    .swiper-container .swiper-button-next{
        right: -40px;
    }
    .swiper-container .swiper-pagination{
        bottom: -50px!important;
    }
  </style>
  
  <script src="{{ 'swiper.js' | asset_url }}"></script>

 <script>
      var swiper = new Swiper(".index_proSwiper", {
         slidesPerView: 4,
    spaceBetween: 20,
         breakpoints: { 
      1: {  
         slidesPerView: 1.3,
    spaceBetween: 20,
         centeredSlides: true,      

        pagination: {                      
            el: '.swiper-pagination',
        },
        navigation: {                       
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
      },
      1000: {   
         slidesPerView: 2.3,
    spaceBetween: 20,  
        pagination: {                      
            el: '.swiper-pagination',
        },
        navigation: {                       
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
      },
      1380: {  
          slidesPerView: 4,
    spaceBetween: 20,
      }
    }
       
      });
    </script>
  
{%- if section.settings.divider -%}</div>{%- endif -%}

{% schema %}
{
  "name": "Index product",
  "class": "index-section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.logo-list.settings.title.label",
      "default": "Our brands"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:common.heading_size.label",
      "default": "h2",
      "options": [
        {
          "value": "h3",
          "label": "t:common.heading_size.options.small.label"
        },
        {
          "value": "h2",
          "label": "t:common.heading_size.options.medium.label"
        },
        {
          "value": "h1",
          "label": "t:common.heading_size.options.large.label"
        },
        {
          "value": "h0",
          "label": "t:common.heading_size.options.extra_large.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_position",
      "label": "t:common.heading_position.label",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "t:common.heading_position.options.left.label"
        },
        {
          "value": "center",
          "label": "t:common.heading_position.options.center.label"
        },
        {
          "value": "right",
          "label": "t:common.heading_position.options.right.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.logo-list.settings.divider.label",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "product title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        },
         {
          "type": "header",
          "content": "hover show content"
        },
        {
          "type": "image_picker",
          "id": "image2",
          "label": "hover image"
        },
        {
          "type": "text",
          "id": "h_name",
          "label": "hover title"
        },
        {
          "type": "richtext",
          "id": "h_content",
          "label": "hover content"
        }
      ]
    }
  ],
  "presets": [
    {
        "name": "Index product"
     
    }
  ]
 
}
{% endschema %}
