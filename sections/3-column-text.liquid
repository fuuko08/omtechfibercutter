<style> hr {
    height: 1px;
    border: 0;
    border-top: 1px solid;
    border-top-color: var(--shopify-editor-setting-color_borders);
    border-top-color: var(--colorBorder);
    margin: 40px 50px 0px 0px;}
  .has-3-per-row .text-with-icons__block {
    width: 33.333%;
    margin: 0px 0px;
    
}
  .text-with-icons {
    margin: 8px 20px;
}
  @media only screen and (max-width: 600px) {
    .has-3-per-row .text-with-icons__block {
    width: 100%;}
  }
</style>

{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}
{%- if section.settings.space_around -%}
  <div class="index-section">
{%- endif -%}

<div
  class="text-with-icons"
  data-section-id="{{ section.id }}"
  data-section-type="text-with-icons"
>
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div
        class="
          text-with-icons__title
          section-header"
      >
        <h2 class="text-{{ section.settings.align_text }}">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}
    <div
      class="
        text-with-icons__blocks
        has-{{ section.settings.desktop_columns_per_row }}-per-row"
      data-block-count="{{ section.blocks.size }}"
      >
      {% for block in section.blocks %}
        <div class="text-with-icons__block text-{{ section.settings.align_text }}" {{ block.shopify_attributes }}>
           <div class="text-with-icons__block-text">
            {{ block.settings.text }}
          </div>
          <div class="text-with-icons__block-title">
            <h3>{{ block.settings.title }}</h3>
            <hr>
          </div>
         
        </div>
      {% endfor %}
    </div>
    {%- if section.settings.button_label != blank -%}
      <div class="text-with-icons__button">
        <a href="{{ section.settings.button_link }}" class="btn btn--secondary">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}

{% schema %}
{
  "name": "3 Text columns ",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Text alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ]
    },
    {
      "type": "range",
      "id": "desktop_columns_per_row",
      "label": "Desktop columns per row",
      "default": 3,
      "min": 1,
      "max": 3,
      "step": 1
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "Show section divider",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Column",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this section </p>"
        },
        {
          "type": "text",
          "id": "title",
          "label": "heading",
          "default": "Example title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "3 Text columns",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}

