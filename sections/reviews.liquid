{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}
<div class="reviews_sec">
  <div class="page-width">
   <div class="review_head">
     <h2>{{ section.settings.head }}</h2>
     <p>{{ section.settings.subtitle }}</p>
   </div>
  <div class="reviews">
     <div class="swiper reviewSwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide review_item">
          <img src="{{ block.settings.image | img_url:"master" }}" />
          <div class="reviews_content">
            <div class="review_t1">{{ block.settings.title1 }}</div>
            <div class="review_t2">{{ block.settings.title2 }}</div>
            <div class="review_t3">{{ block.settings.title3 }}</div>
            <div class="review_link">
              <a href="{{ block.settings.link }}">read more <i class="icon_right"></i></a>
            </div>
          </div>
        </div>
       {% endfor %}
      </div>
      
    </div>
    <div class="swiper-pagination"></div>
  </div>
  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}
  <script src="{{ 'swiper.js' | asset_url }}"></script>
 <script>
      var swiper = new Swiper(".reviewSwiper", {
        pagination: {
          el: ".swiper-pagination",
        },
      });
    </script>
{% schema %}
{
  "name": "reviews",
  "class": "index-section-reviews",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "head",
      "label": "title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle"
    },
    
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.logo-list.settings.divider.label",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image"
        },
        {
          "type": "text",
          "id": "title1",
          "label": "content 1"
        },
        {
          "type": "text",
          "id": "title2",
          "label": "content 2"
        },
        {
          "type": "text",
          "id": "title3",
          "label": "content 3"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
        "name": "reviews"
     
    }
  ]
 
}
{% endschema %}
